<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>
<p id="notice"></p>
<div class="container">
  <div class='row'>
    <div class='col-md-3'>
　　  <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
      <table>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>
      <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
      <h2>New book</h2>
      <%= form_with model:@book, local:true do |f| %>
        <label for="inputTitle">名前</label><br>
        <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"title" %><br>
        <label for="inputBody">感想</label><br>
        <%= f.text_area :body, autofocus: true, id:"inputBody", placeholder:"body" %><br>
        <%= f.submit "Create Book" %>
      <% end%>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table>
        <tr>
          <th></th>
          <th>title</th>
          <th>body</th>
        </tr>
        <% @books.each do |book| %>
        <tr>
          <td><%= link_to user_path(@user) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %></td>
          <% end %>
          <td>
            <%= link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %>
          </td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>