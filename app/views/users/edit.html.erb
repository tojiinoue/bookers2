<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h2>User info</h2>

      <% if @user.errors.any? %>
        <%= @user.errors.count %>件のerrorが発生しました
        <% @user.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>

      <%= form_with model:@user, local:true do |f| %>
        <label for="inputName">Name</label><br>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name" %><br>
        <label for="inputImage">Image</label><br>
        <%= f.attachment_field :profile_image, placeholder: "Image" %><br>
        <label for="inputIntroduction">Introduction</label><br>
        <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"Introduction" %><br>
        <%= f.submit "Update User" %>
      <% end%>
    </div>
  </div>
</div>